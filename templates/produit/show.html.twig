{% extends 'base.html.twig' %}

{% block title %}{{'Product'|trans}}{% endblock %}

{% block body %}
    <h1>{{'Product'|trans}}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ produit.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ produit.description }}</td>
            </tr>
            <tr>
                <th>{{'table.price'|trans}}</th>
                <td>{{ produit.price }}</td>
            </tr>
            <tr>
                <th>Stock</th>
                <td>{{ produit.stock }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td>{{ produit.photo }}</td>
            </tr>
        </tbody>
    </table>

    <div>
    <h4>{{'Add-cart'|trans}} :</h4>
    {{form(formCart)}}
    </div>

    <a href="{{ path('produit_index') }}">back to list</a>
    {% if is_granted('ROLE_ADMIN') %}
    <a href="{{ path('produit_edit', {'id': produit.id}) }}">edit</a>
    {% endif %}

    {{ include('produit/_delete_form.html.twig') }}
{% endblock %}
